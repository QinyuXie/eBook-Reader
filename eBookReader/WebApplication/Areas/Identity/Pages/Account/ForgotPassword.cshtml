@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<br />
<h1>@ViewData["Title"]</h1>
<div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" class="formControl" placeholder="Input your email" required pattern="(.*)@@(.*)[.](.*)"
                 oninvalid="this.setCustomValidity('Invalid email id')" />
            </div>
            <button type="submit" class="btnIdentity">Submit</button>
        </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
